{
  "manifest_version": 2,

  "name": "Заметки",
  "version": "1.0",

  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  },

  "browser_action": {
    "default_icon": "images/icon16.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "storage"
  ],

  "web_accessible_resources": [
    "images/*"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}